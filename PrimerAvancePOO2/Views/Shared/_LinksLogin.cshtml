@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <span class="nav-link text-dark">Hola, @User.Identity.Name</span>
            </li>

            <li class="nav-item">
                <form class="form-inLine" asp-action="Logout" asp-controller="Usuarios">
                    <button type="submit" class="nav-link btn btn-link text-dark" >
                        Logout
                    </button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link dark-text" asp-controller="Usuarios" asp-action="Registros">Registro</a>
            </li>
            <li class="nav-item">
                <a class="nav-link dark-text" asp-controller="Usuarios" asp-action="Inicio Sesion">Iniciar Sesion</a>
            </li>
        }
    </ul>